<Window x:Class="RecipeAndIngredientsWPF.EnterRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Recipe" Height="450" Width="400">
    <Grid>
        <StackPanel>
            <TextBox Name="IngredientName" PlaceholderText="Ingredient Name" Margin="5"/>
            <TextBox Name="IngredientQuantity" PlaceholderText="Quantity" Margin="5"/>
            <TextBox Name="IngredientUnit" PlaceholderText="Unit" Margin="5"/>
            <Button Content="Add Ingredient" Click="AddIngredient_Click" Margin="5"/>

            <TextBox Name="StepDescription" PlaceholderText="Step Description" Margin="5"/>
            <Button Content="Add Step" Click="AddStep_Click" Margin="5"/>
            <Button Content="Done" Click="Done_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
